.menu-item {
  background-color: #fff;
  margin-bottom: 10px;
}
.menu-item .item-title {
  border-bottom: 1px solid rgba(0, 0, 0, .03);
  display: flex;
  align-items: center;
  padding: 5px 10px;
}
.menu-item .item-title .icon {
  width: 30px;
  height: 30px;
  border-radius: 30%;
  overflow: hidden;
}
.menu-item .item-title .icon image {
  width: 100%;
  height: 100%;
}
.menu-item .item-title .title {
  flex: 1;
  margin-left: 10px;
  font-size: 14px;
}
.menu-item .item-details {
  padding: 10px 30px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 20px 20px;
  font-size: 12px;
}
