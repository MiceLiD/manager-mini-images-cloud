<!--index.wxml-->
<view class="container index">
  <swiper
    class='slide-image'
    indicator-dots='true'
    indicator-active-color='#ffffff'
    autoplay='true'>
    <block wx:for="{{ imgUrls }}" wx:key="{{ index }}">
      <swiper-item>
        <view class='img-wrapper' style="{{ 'width: 100%;height: 100%;background-size: 100%;background-repeat: no-repeat;background-image: url(' + item + ')' }}"></view>
      </swiper-item>
    </block>
  </swiper>
  <view class='menu-wrapper'>
    <block wx:for='{{ menus }}' wx:key="{{ index }}">
      <view class='menu-item' bindtap='navigateTo' data-props="{{ item }}">
        <view class='item-icon'>
          {{ index }}
        </view>
        <view class='item-text'>
          {{ item.text }}
        </view>
      </view>
    </block>
  </view>
</view>
